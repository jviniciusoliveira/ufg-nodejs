<%- contentFor('body') %>

<form action="/candidato/save" method="POST">
    <div class="form-group">
        <label for="nome">Nome</label>
        <input type="text" class="form-control" id="nome" name="nome" placeholder="Nome do candidato">
    </div>
    <div class="form-group">
        <label for="partido">Partido</label>
        <input type="text" class="form-control" id="partido" name="partido" placeholder="Partido">
    </div>
    <div class="form-group">
            <label for="numero">Numero</label>
            <input type="number" class="form-control" id="numero" name="numero" placeholder="Numero para votação">
        </div>
    <button type="submit" class="btn btn-primary">Gravar</button>
</form>