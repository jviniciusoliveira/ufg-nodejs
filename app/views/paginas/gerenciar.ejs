<%- contentFor('body') %>

<h3>Cadastros</h3>    

<table class="table table-striped ">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Nome</th>
            <th scope="col">Número | Partido</th>
            <th class="center" scope="col">Ações</th>
            <th ></th>
        </tr>
    </thead>
    <tbody>
    <%  for (var i in cand) { %>
        <tr>
            <th scope="row"><%=i %></th>
            <td><%=cand[i].nome %></td>
            <td><%=cand[i].numero %> | <%=cand[i].partido %></td>
            <td><a href="editar/<%=cand[i].numero %>"class="btn btn-outline-info btn-sm">Editar</a></td>
            <td>
                <form action="candidato/excluir" method="POST">
                    <input type="hidden" name="candidatoNr" value="<%=cand[i].numero %>">
                    <button type="submit" class="btn btn-outline-danger btn-sm">Excluir</button> 
                </form>  
            </td>
        </tr>
    <% } %>
    </tbody>
</table>

<a href="/cadastrar" class="btn btn-primary btn-md">Cadastrar</a>
